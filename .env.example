# --- App ---
APP_PORT=8000
APP_LOG_LEVEL=info

# --- Connections (host machine) ---
DATABASE_URL=postgresql+psycopg://agent:agentpw@localhost:5432/agentdb
REDIS_URL=redis://localhost:6379/0

# --- Observability (Jaeger all-in-one) ---
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_SERVICE_NAME=mcp-agent-factory

# Metadata from local/dev environment
OTEL_RESOURCE_ATTRIBUTES=deployment.environment=local,service.version=0.0.1

# Sampling 
# Default, if the incoming request already has a trace, continue it; otherwise, start one and sample everything.
OTEL_TRACES_SAMPLER=parentbased_always_on

# Which backend to use right now
SECRETS_BACKEND=env  # env | vault | aws-sm

# For "env" backend (local dev) â€” put the actual secrets in .env (not committed)
OPENAI_API_KEY=changeme

# For Vault (stubbed;)
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=      # set in real env, not committed
VAULT_KV_MOUNT=kv
VAULT_KV_PATH=agent-factory

# For AWS SM (stubbed; fill later)
AWS_REGION=us-east-1
AWS_SECRETS_PREFIX=agent-factory/